# Application
APP_NAME=Location-Based Podcast Generator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# API
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://podcast_user:podcast_pass@localhost:5432/podcast_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB_CACHE=0
REDIS_DB_SESSIONS=1
REDIS_DB_RATE_LIMIT=2
REDIS_TTL_DEFAULT=1800

# Rate Limiting
RATE_LIMIT_FREE_TIER=100
RATE_LIMIT_PREMIUM_TIER=1000
RATE_LIMIT_WINDOW_HOURS=1

# Security
BCRYPT_COST_FACTOR=12
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Keys for Content Generation
PERPLEXITY_API_KEY=your-perplexity-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# External API Services
GEONAMES_USERNAME=demo  # Register at geonames.org for free account (1000 requests/hour)
